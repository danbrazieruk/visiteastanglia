{% extends '_layout' %}

{% block main %}
    <header>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="display-4">
                        {% set listicle = craft.entries.section('listicles').one() %}
                            {{ listicle }}

                    </h2>
                </div>
            </div>
        </div>
    </header>

    {# Activites #}
    <section id="activities" class="content-block">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Things to do</h2>
                </div>
            </div>

            <div class="row">

                {# Hero activity #}
                {% set activityHero = craft.entries.section('activities').one() %}
                <div class="col-5">
                    <h5>{{ activityHero.title }}</h5>
                </div>



                {# Further activities #}
                <div class="col-lg-7">
                    <div class="row">
                        {% for activity in craft.entries.section('activities').limit(4).offset(1).all() %}
                            <div class="col-6">
                                <h5>{{ activity.title }}</h5>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>


    {# Locations #}
    <section id="locations" class="content-block">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Locations</h2>

                </div>
            </div>
        </div>
    </section>


    {# Plan your visit #}
    <section id="plan-your-visit" class="content-block">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Plan your visit</h2>
                </div>
            </div>
        </div>
    </section>


    {# Newsletter #}
    <section id="newsletter" class="content-block">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Newsletter</h2>
                </div>
            </div>
        </div>
    </section>


    {# Social #}
    <section class="content-block">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Social</h2>
                </div>
            </div>
        </div>
    </section>

{% endblock %}