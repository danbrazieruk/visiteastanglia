{% extends '_layout' %}

{% block main %}

    {# Hero listicle header #}
    {% set listicle = craft.entries.section('listicles').one() %}
    <header class="hero-header" style="background-image: url('{{ siteUrl }}uploads/listicles/{{ listicle.listicleImage.one() }}.jpg');">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-12 d-flex">
                    <h2 class="display-4 hero-heading align-self-center">
                        <span>{{ listicle }}</span>
                    </h2>
                </div>
            </div>
        </div>
    </header>


    {# Introduction #}
    <section id="introduction" class="content-block">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <h1 class="display-4">{{ entry.introductionHeading }}</h1>
                </div>

                <div class="col-lg-7">
                    {{ entry.introductionBody }}
                </div>
            </div>
        </div>
    </section>


    {# Activites #}
    <section id="activities" class="content-block">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Things to do</h2>
                </div>
            </div>

            <div class="row">

                {# Hero activity #}
                {% set activityHero = craft.entries.section('activities').one() %}

                <div class="col-5">
                    {# todo: handle image fallbacks #}
                    {# todo: use image.getUrl method #}

                    <div class="activity" style="background-image: url('{{ siteUrl }}uploads/activities/{{ activityHero.activityImage.one() }}.jpg');">
                        <h5>{{ activityHero }}</h5>
                    </div>
                </div>



                {# Further activities #}
                <div class="col-lg-7">
                    <div class="row">
                        {% for activity in craft.entries.section('activities').limit(4).offset(1) %}
                            <div class="col-6">
                                <div class="activity">
                                    <div class="">
                                        <img src="{{ siteUrl }}uploads/activities/{{ activity.activityImage.one() }}.jpg" class="img-fluid">
                                    </div>

                                    <h5>{{ activity.title }}</h5>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>


    {# Places to stay #}
    <section id="locations" class="content-block">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Places to stay</h2>

                </div>
            </div>
        </div>
    </section>


    {# What's on #}
    <section id="plan-your-visit" class="content-block">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>What's on</h2>
                </div>
            </div>
        </div>
    </section>


    {# Social #}
    <section id="instagram" class="content-block">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <h2 class="text-uppercase text-spaced mb-3">#VisitEastAnglia</h2>
                </div>
            </div>
        </div>

        {# Instagram feed #}
        {% include '_instagram_feed' %}
    </section>

{% endblock %}